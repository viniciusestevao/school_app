{
  "name": "school_app",
  "packageManager": "yarn@4.10.1",
  "devDependencies": {
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "sass": "^1.92.1"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "@rails/actiontext": "^8.0.300",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "sortablejs": "^1.15.6",
    "trix": "^2.1.15"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:watch": "yarn build --watch",
    "build:css": "sass app/assets/stylesheets/application.scss:app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "build:all": "yarn build && yarn build:css",
    "watch": "run-p watch:js watch:css",
    "watch:js": "yarn build --watch",
    "watch:css": "yarn build:css --watch"
  }
}

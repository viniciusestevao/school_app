<div id="toast-stack" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
  <% flash.each do |key, message| %>
    <% next if message.blank? %>
    <% bs_class =
      case key.to_s
      when 'notice' then 'text-bg-success'
      when 'alert', 'error' then 'text-bg-danger'
      when 'warning' then 'text-bg-warning'
      else 'text-bg-info'
      end
    %>

    <div class="toast <%= bs_class %>" role="alert" aria-live="assertive" aria-atomic="true"
         data-bs-autohide="true" data-bs-delay="1500">
      <div class="toast-header">
        <strong class="me-auto">
          <%=
            { 'notice' => 'Sucesso', 'alert' => 'Atenção', 'error' => 'Erro', 'warning' => 'Aviso' }[key.to_s] || 'Informação'
          %>
        </strong>
        <small>agora</small>
        <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Fechar"></button>
      </div>
      <div class="toast-body">
        <%= message %>
      </div>
    </div>
  <% end %>
</div>

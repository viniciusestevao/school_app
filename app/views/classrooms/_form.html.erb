<%= form_with(model: classroom, class: "needs-validation") do |f| %>
  <% if classroom.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(classroom.errors.count, "erro") %> impediram salvar:</strong>
      <ul class="mb-0">
        <% classroom.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :course_id, "Curso", class: "form-label" %>
    <%= f.collection_select :course_id, Course.all, :id, :title, { include_blank: "Selecione um curso" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :teacher_id, "Professor", class: "form-label" %>
    <%= f.collection_select :teacher_id, User.admin, :id, :name, { include_blank: "Selecione um professor" }, class: "form-select" %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancelar", classrooms_path, class: "btn btn-outline-secondary" %>
    <%= f.submit classroom.persisted? ? "Salvar" : "Criar turma", class: "btn btn-primary" %>
  </div>
<% end %>

<% content_for :title, @course.title %>

<div class="card mb-3">
  <div class="card-body">
    <h1 class="h4 mb-3"><%= @course.title %></h1>

    <div class="mb-4">
      <h2 class="h6 text-uppercase text-muted mb-2">Descrição</h2>
      <p class="mb-0"><%= simple_format(@course.description) %></p>
    </div>

    <div class="d-flex gap-2 justify-content-end">
      <%= link_to "Editar", edit_course_path(@course), class: "btn btn-outline-primary" %>
      <%= link_to "Excluir", @course,
            data: { turbo_method: :delete,
                    turbo_confirm: "Tem certeza que deseja excluir o curso “#{@course.title}”?" },
            class: "btn btn-outline-danger" %>
      <%= link_to "Voltar", courses_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
